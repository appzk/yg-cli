{
  "name": "yg-cli",
  "version": "1.0.1",
  "description": "A simple CLI for front-end engineering automation construction tool.",
  "preferGlobal": true,
  "bin": {
    "yg": "bin/yg",
    "yg-init": "bin/yg-init",
    "yg-list": "bin/yg-list"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appzk/yg-cli.git"
  },
  "keywords": [
    "yg",
    "cli",
    "spa"
  ],
  "author": "appzk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/appzk/yg-cli/issues"
  },
  "homepage": "https://github.com/appzk/yg-cli#readme",
  "scripts": {
    "test": "npm run unit && npm run lint && npm run e2e",
    "lint": "eslint test/e2e/test*.js lib bin/* --env",
    "e2e": "rimraf test/e2e/mock-template-build --slow 1000",
    "unit": "jest --config test/unit/jest.conf.js --coverage",
    "commit": "git-cz"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "inquirer": "^7.3.2",
    "rc-config-loader": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^4.2.0",
    "@testing-library/react": "^9.3.0",
    "@testing-library/user-event": "^7.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "debug": "^4.1.1",
    "egg": "^2.27.0",
    "egg-bin": "^4.15.0",
    "egg-http-proxy": "^1.0.0",
    "egg-scripts": "^2.10.0",
    "egg-view-nunjucks": "^2.2.0",
    "husky": "^1.3.1",
    "jest": "24.9.0",
    "lint-staged": "^8.0.4",
    "meow": "^5.0.0",
    "npm-which": "^3.0.1",
    "prettier": "1.18.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css,html}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 6.0.0"
  }
}
